<h1>Login</h1>

<%= form_tag '/sessions', method: 'post' do |f| %>
  <p>
    Email:<br/>
    <%= text_field_tag :email %>
  </p>
  <p>
    Password:<br/>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Login" %>
  </p>
<% end %>

<p>
  <%= link_to "Back to Home Page", root_path %>
</p>
