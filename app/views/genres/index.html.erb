<%= "Session User ID: #{session[:user_id]}" %>

<% @genres.each do |genre| %>
  <p><a href="/genres/<%= genre.id %>"><%= genre.name %></a></p>
<% end %>

<% if current_user %>
  <p>
    <%= link_to "Create New Genre", new_genre_path %>
  </p>
<% end %>

<p>
  <%= link_to "Sign Up", new_user_path %>
</p>

<p>
  <%= link_to "Login", new_session_path %>
</p>

<p>
  <%= link_to "Logout", session_path(0), method: :delete %>
</p>
