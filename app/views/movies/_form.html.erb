<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @movie do |f| %>
  <p>
    Title:<br/>
    <%= f.text_field :title %>
  </p>
  <p>
    Year:<br/>
    <%= f.text_field :year %>
  </p>
  <p>
    Genre Id:<br/>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "Please select genre"}) %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<p>
  <%= link_to "Back to Genres", genres_path %>
</p>
